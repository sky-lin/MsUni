@model IEnumerable<MsUni.Models.Candidate>

@{
    ViewBag.Title = "ListAll";
}

<h2>List All Candidates</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.University)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            <p>Image</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vote)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approved)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a href="@Url.Action("Details", "Images", new { id = @Html.DisplayFor(modelItem => item.CandidateImageId) })" target="_blank">
                    <img src="@Url.Action("GetThumbNailImageByImageId", "Candidates", new { imageId = @Html.DisplayFor(modelItem => item.CandidateImageId) })" />
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vote) |
                @Html.ActionLink("Vote", "Vote", new { id = item.CandidateId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Approved)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CandidateId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CandidateId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CandidateId })
            </td>
        </tr>
    }

</table>
